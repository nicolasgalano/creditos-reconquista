extends layout

block body
    body.index
    
block header
    include partials/header
            
block content
    
    .section-row.row-main
        .overlay
            
        .content
            
            .prestamo-link.wow.fadeInRight(data-wow-duration="2s")
                p Tu crédito en serio
                a.btn(href="#") Solicitá tu crédito
            
        // Swiper
        .swiper-container
            .swiper-wrapper
                
                .swiper-slide(style="background-image:url('images/main/slider-1.jpg');")
                
                
                .swiper-slide(style="background-image:url('images/main/slider-2.jpg');")
                    
                
                .swiper-slide(style="background-image:url('images/main/slider-3.jpg');")
                          
    
    .section-row.row-example
        
        p.wow.fadeInLeft ​Tenemos planes de <span>$5000 a $40.000</span> cuotas fijas de 3 a 12
        
