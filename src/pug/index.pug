block body
    body.index
    
block header
    include partials/header
            
block content
    
    .loading.on#loading
        .loader
    
    .section-row.row-main
        .overlay
            
        .content
            
            .prestamo-link
                p Tu préstamo hoy
                a.btn.sticker#sticker(href="#") Solicitá tu crédito
                a.btn.sticker.sticker2(href="#") Solicitá tu crédito
            
        // Swiper
        .swiper-container
            .swiper-wrapper
                .swiper-slide(style="background-image:url('images/main/slider-3.jpg');")
