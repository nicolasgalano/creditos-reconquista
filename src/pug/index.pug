        i.fas.fa-dollar-sign.money-1.wow.fadeInLeft
        i.fas.fa-dollar-sign.money-2.wow.fadeInRight
        i.fas.fa-dollar-sign.money-3.wow.fadeInUp
        i.fas.fa-dollar-sign.money-4.wow.fadeInUp
    
    .section-row.row-reqs
        .container
            .row
                .col-sm-12
            
                    h2.wow.fadeInUp Tenés que tener:
                    
                    ul.wow.fadeInUp.clearfix
                        li
                            i.far.fa-id-card
                            span DNI Argentino
                        li
                            i.fas.fa-user-circle
                            span Más de 18 años
                        li
                            i.fas.fa-briefcase
                            span Antigüedad laboral mínima de 1 año
                        li
                            //i.fas.fa-university
                            i.fas.fa-piggy-bank
                            span Cuenta bancaria
                        li
                            //<i class="fas fa-file-invoice-dollar"></i>
                            i.fas.fa-file-invoice-dollar
                            span Ingreso mínimo de $15.000
                        li
                            i.fas.fa-mobile-alt
                            span Teléfono celular
                        li
                            i.far.fa-envelope
                            span Correo electrónico
                    
    .section-row.row-contact
        .container
            .row
                .col-sm-12.col-md-5
                    h2 Ante cualquier duda, estamos a tu disposición.
                .col-sm-12.col-md-7
                    .caja
                        i.fas.fa-phone
                        br
                        span Teléfono
                        br
                        b 5217 5214
                        
                    .caja
                        i.fas.fa-envelope
